<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
        <item name="android:windowTitleStyle">@style/WindowTitle</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="WindowTitle">
        <item name="android:textColor">#0D47A1</item>
    </style>

    <style name="WindowTitleBackground">
        <item name="android:background">#EF9A9A</item>
    </style>

    <style name="splashScreen" parent="AppTheme">
        <item name="android:background">@drawable/background</item>
    </style>

    <style name="chooseScreen" parent="AppTheme">
        <item name="android:background">#EF9A9A</item>
    </style>

    <style name="sandboxScreen" parent="AppTheme">
        <item name="android:background">#EF9A9A</item>
    </style>

    <style name="createSandboxButton" parent="AppTheme">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="chooseButton" parent="AppTheme">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="inputField" parent="AppTheme">
        <item name="android:padding">10dp</item>
    </style>

    <style name="sandbox" parent="AppTheme">
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="sandboxHyperlink" parent="AppTheme">
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="splashStringText" parent="AppTheme">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">#F44336</item>
        <item name="android:textStyle">italic</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
