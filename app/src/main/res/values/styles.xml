<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
        <item name="android:windowTitleStyle">@style/WindowTitle</item>
    </style>

    <style name="WindowTitle">
        <item name="android:textColor">#0D47A1</item>
    </style>

    <style name="WindowTitleBackground">
        <item name="android:background">#64B5F6</item>
    </style>

    <style name="bigred" parent="android:Theme.Holo">
        <item name="android:textColor">#FFFF0000</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="fancytext" parent="bigred">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="splashScreen" parent="AppTheme">
        <item name="android:background">#64B5F6</item>
    </style>

    <style name="sandboxScreen" parent="AppTheme">
        <item name="android:background">#64B5F6</item>
    </style>

    <style name="createSandboxButton" parent="AppTheme">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="inputField" parent="AppTheme">
        <item name="android:padding">10dp</item>
    </style>

    <style name="sandbox" parent="AppTheme">
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>
</resources>
