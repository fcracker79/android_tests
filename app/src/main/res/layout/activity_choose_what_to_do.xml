<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.mirko.tutorial1.ChooseWhatToDoActivity"
    style="@style/chooseScreen">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <Button android:id="@+id/open_my_sandbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="onClickOpenSandbox"
            android:text="@string/copy_and_paste"
            android:layout_weight="1"
            style="@style/chooseButton"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <Button android:id="@+id/rate_app"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="onClickRate"
            android:layout_weight="1"
            android:text="@string/rate"
            style="@style/chooseButton"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <Button android:id="@+id/credits_app"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="onClickCredits"
            android:text="@string/credits"
            android:layout_weight="1"
            style="@style/chooseButton"/>
    </LinearLayout>
</LinearLayout>
